<p id="notice"><%= notice %></p>

<h1>Listing Campuses</h1>

<% if user_signed_in? %>  
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @campuses.each do |campus| %>
        <tr>
          <td><%= campus.name %></td>
          <td><%= campus.address %></td>
          <!-- <td><%= link_to 'Show', campus %></td> -->
          <td><button><%= link_to 'Edit', edit_campus_path(campus) %></button></td>
          <td><button><%= link_to 'Delete', campus, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button><%= link_to 'New Campus', new_campus_path %></button>

<% else %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @campuses.each do |campus| %>
        <tr>
          <td><%= campus.name %></td>
          <td><%= campus.address %></td>
          <!-- <td><%= link_to 'Show', campus %></td> -->
          <!-- <td><%= link_to 'Edit', edit_campus_path(campus) %></td> -->
          <!-- <td><%= link_to 'Delete', campus, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
  


