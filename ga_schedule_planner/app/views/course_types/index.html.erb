<p id="notice"><%= notice %></p>

<h1>Listing Course Types</h1>

<% if user_signed_in? %>  
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @course_types.each do |course_type| %>
        <tr>
          <td><%= course_type.name %></td>
          <td><%= course_type.description %></td>
          <!-- <td><%= link_to 'Show', course_type %></td> -->
          <td>
            <% if can? :update, course_type %>
              <button><%= link_to 'Edit', edit_course_type_path(course_type) %></button>
            <% end %>
          </td>
          <td>
            <% if can? :destroy, course_type %>
              <button><%= link_to 'Destroy', course_type, method: :delete, data: { confirm: 'Are you sure?' } %></button>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <p>    
    <% if can? :create, CourseType %>
      <button><%= link_to 'New Course type', new_course_type_path %></button>
    <% end %>    
  </p>

<% else %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @course_types.each do |course_type| %>
        <tr>
          <td><%= course_type.name %></td>
          <td><%= course_type.description %></td>
          <!-- <td><%= link_to 'Show', course_type %></td> -->
          <!-- <td><%= link_to 'Edit', edit_course_type_path(course_type) %></td> -->
          <!-- <td><%= link_to 'Destroy', course_type, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>

<% end %>