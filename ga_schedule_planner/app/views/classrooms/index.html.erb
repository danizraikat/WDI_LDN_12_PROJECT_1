<p id="notice"><%= notice %></p>

<h1>Listing Classrooms</h1>

<% if user_signed_in? %>  
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Capacity</th>
        <th>Campus</th>
        <!-- <th colspan="3"></th> -->
      </tr>
    </thead>

    <tbody>
      <% @classrooms.each do |classroom| %>
        <tr>
          <td><%= classroom.name %></td>
          <td><%= classroom.capacity %></td>
          <td><%= classroom.campus_id %></td>
          <td>
            <% if can? :update, classroom %>
              <button><%= link_to 'Edit', edit_classroom_path(classroom) %></button>
            <% end %>
          </td>
          <td>
            <% if can? :destroy, classroom %>
              <button><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>           
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <p>    
    <% if can? :create, Classroom %>
    <button><%= link_to 'New Classroom', new_classroom_path %></button>
    <% end %>    
  </p>

<% else %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Capacity</th>
        <th>Campus</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @classrooms.each do |classroom| %>
        <tr>
          <td><%= classroom.name %></td>
          <td><%= classroom.capacity %></td>
          <td><%= classroom.campus_id %></td>
          <!-- <td><%= link_to 'Show', classroom %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

<% end %>
