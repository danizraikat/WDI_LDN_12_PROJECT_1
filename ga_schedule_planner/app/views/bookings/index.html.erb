<p id="notice"><%= notice %></p>

<h1>Listing Bookings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Course</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.user.second_name %></td>
        <td><%= booking.course.name %></td>
        <!-- <td><%= link_to 'Show', booking %></td> -->
        <td><button><%= link_to 'Edit', edit_booking_path(booking) %></button></td>
        <td><button><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button><%= link_to 'New Booking', new_booking_path %></button>

