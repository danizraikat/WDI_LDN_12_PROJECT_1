<p id="notice"><%= notice %></p>

<h1>GA Campuses</h1>

<% if user_signed_in? %>  
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <!-- <th colspan="3"></th> -->
      </tr>
    </thead>

    <tbody>
      <% @campuses.each do |campus| %>
        <tr>
          <td><strong><%= campus.name %></strong></td>
          <td><%= campus.address %></td>
          <!-- <td><%= link_to 'Show', campus %></td> -->
          <td><%= image_tag campus.campus_location_image.url %></td>
          <td>
            <% if can? :update, campus %>
              <button class="change"><%= link_to 'Edit', edit_campus_path(campus) %></button>
            <% end %>
          </td>
          <td>
            <% if can? :destroy, campus %>
              <button class="change"><%= link_to 'Delete', campus, method: :delete, data: { confirm: 'Are you sure?' } %></button>
            <% end %>      
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <p> 
    <% if can? :create, Campus %>
    <button class="new"><%= link_to 'New Campus', new_campus_path %></button>
    <% end %>    
  </p>

<% else %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @campuses.each do |campus| %>
        <tr>
          <td><strong><%= campus.name %></strong></td>
          <td><%= campus.address %></td>
          <td><%= image_tag campus.campus_location_image.url %></td>
          <!-- <td><%= link_to 'Show', campus %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
  


